@using MovieProWonder.Models.TMDB
@model ActorDetail

<div class="d-flex align-items-center">
    <div class="flex-shrink-0">
        <img src="@Model.profile_path" class="align-self-center me-3" alt="@Model.name's photo">
    </div>
    <div class="flex-grow-1 ms-3">
        <div class="row">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.name</td>
                    </tr>

                    <tr>
                        <td>Biography:</td>
                        <td>@Model.biography</td>
                    </tr>

                    <tr>
                        <td>Birthday:</td>
                        <td>@Model.birthday</td>
                    </tr>
                    
                    <tr>
                        <td>Place of Birth:</td>
                        <td>@Model.place_of_birth</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>